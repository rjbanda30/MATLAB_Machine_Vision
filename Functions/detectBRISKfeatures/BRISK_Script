%% Load Sample Frames
clear all;

I = imread ('rec1.jpg')
subplot(1,2,1)
imshow(I)
title('Pic')

grayFrame = im2gray(I)
subplot(1,2,2)
imshow(grayFrame)
title('Grayscale Frame')

points = detectBRISKFeatures(I,MinContrast)
imshow(I)
hold on
plot(points.selctStrongest(100))


% Increasing MinQuality value reduces the number of edge detections
points = detectBRISKFeatures(I,MinContrast,0.1)
imshow(I)
hold on
plot(points.selctStrongest(90))

points = detectBRISKFeatures(I,MinContrast,0.2)
imshow(I)
hold on
plot(points.selctStrongest(80))

points = detectBRISKFeatures(I,MinContrast,0.3)
imshow(I)
hold on
plot(points.selctStrongest(70))

points = detectBRISKFeatures(I,MinContrast,0.4)
imshow(I)
hold on
plot(points.selctStrongest(60))

points = detectBRISKFeatures(I,MinContrast,0.5)
imshow(I)
hold on
plot(points.selctStrongest(50))


% Increasing MinQuality value reduces erroneous edge detections
points = detectBRISKFeatures(I,MinQuality,1) 
imshow(I)
hold on
plot(points.selctStrongest(50))

points = detectBRISKFeatures(I,MinQuality,0.9) 
imshow(I)
hold on
plot(points.selctStrongest(50))

points = detectBRISKFeatures(I,MinQuality,0.8) 
imshow(I)
hold on
plot(points.selctStrongest(50))

points = detectBRISKFeatures(I,MinQuality,0.7) 
imshow(I)
hold on
plot(points.selctStrongest(50))

points = detectBRISKFeatures(I,MinQuality,0.6) 
imshow(I)
hold on
plot(points.selctStrongest(50))




